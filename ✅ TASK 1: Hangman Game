import random

words = ['python', 'code', 'alpha', 'intern', 'project']
word = random.choice(words)
guesses = ''
turns = 6

print("ğŸ® Welcome to Hangman!")
print("_ " * len(word))

while turns > 0:
    failed = 0
    for char in word:
        if char in guesses:
            print(char, end=' ')
        else:
            print('_', end=' ')
            failed += 1
    print()

    if failed == 0:
        print("âœ… You won! The word was:", word)
        break

    guess = input("Guess a letter: ").lower()
    guesses += guess

    if guess not in word:
        turns -= 1
        print("âŒ Wrong guess.")
        print("You have", turns, "more guesses.")

        if turns == 0:
            print("ğŸ’€ Game over. The word was:", word)
